<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@layout/customlistviewhover"
    android:orientation="vertical" >

    <TextView
    android:id="@+id/textView3"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_alignParentTop="true"
    android:layout_marginTop="1dp"
    android:text="You free post limit has reached. Please get the full version from the bellow link"
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:textColor="#64B801" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="37dp"
        android:autoLink="web"
        android:linksClickable="true"
        android:text="https://play.google.com/store/apps/details?id=com.diarypaid.superdiarypaid"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#64B801" />


</RelativeLayout>