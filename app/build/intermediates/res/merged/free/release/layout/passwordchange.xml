<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@layout/customlistviewhover"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView2"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="36dp"
        android:ems="10"
        android:textColorHint="#64B801"
        android:hint="Type Password Here"
        android:textColor="#64B801"
        android:inputType="textPassword"
        />

    <Button
        android:id="@+id/set"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/password"
        android:layout_below="@+id/password"
        android:layout_marginRight="15dp"
        android:layout_marginTop="50dp"
        android:background="@layout/custombtnhoverpassset" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="1dp"
        android:text="Set Your First Time Password Here.This Password Will Be Using When You Opening Your Diary Here After"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#64B801" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="37dp"
        android:text="New Password"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#64B801" />

</RelativeLayout>